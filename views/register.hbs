<div class="container-fluid vh-100 d-flex flex-column">
  <div class="row bg-cstm-yellow flex-grow-1">
    <div class="col-xs-12 col-md-6 p-4 bg-cstm-yellow-lighter d-flex flex-column">
      <div class="p-4 bg-cstm-yellow-lightest flex-grow-1">
        <div class="p-4">
          <p class="text-center mt-4"><a href="/" class="text-dark"><i id="login-logo" class="fa fa-cutlery"></i></a></p>
          <hr class="ml-auto mr-auto mt-4">
          <h1>Register</h1>
          <form id="register" action="/register" method="POST">
            <div id="register-basic">
              <div class="form-group">
                <label for="username">Username</label>
                <input id="username" class="form-control" name="username" type="text">
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input id="email" class="form-control" name="email" type="email">
              </div>
              <div class="form-group mt-3">
                <label for="password">Password</label>
                <input id="password" class="form-control" name="password" type="password">
              </div>
              <div class="form-group mt-3">
                <label for="confirm">Confirm password</label>
                <input id="confirm" class="form-control" name="confirm" type="password">
              </div>
              <input id="next" type="button" class="btn btn-cstm-orange" value="Next">
              <p class="mt-3">Have an account? <a href="/login" class="font-weight-bold text-cstm-orange-darkest">Login</a></p>
            </div>
            <div id="register-bio" style="display: none;">
              <div class="row">
                <div class="col">
                  <label for="firstname">First name</label>
                  <input id="firstname" class="form-control" name="firstname" type="text">
                </div>
                <div class="col">
                  <label for="lastname">Last name</label>
                  <input id="lastname" class="form-control" name="lastname" type="text">
                </div>
              </div>
              <div class="row mt-3">
                <div class="col">
                  <label for="bio">Biography</label>
                  <textarea id="bio" class="form-control" name="bio" rows="5" type="text"></textarea>
                  <div class="row mt-5">
                    <div class="col-4">
                      <input id="prev" type="button" class="btn btn-cstm-orange-lightest" value="Previous">
                    </div>
                    <div class="col-4">
                      <input type="submit" class="btn btn-cstm-orange" value="Register">
                    </div>
                  </div>
                </div>
                <div class="col">
                  <label for="display">Display picture</label>
                  <input id="display" class="form-control-file" name="display" type="file">
                  <img id="display-preview" class="img-thumbnail mt-2" style="display:none;width:75%">
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div id="register-filler" class="col-6 d-none d-md-block flex-grow-1">
      &nbsp;
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $("#next").click(function() {
      $("#register-basic").hide();
      $("#register-bio").show();
    });
    $("#prev").click(function() {
      $("#register-bio").hide();
      $("#register-basic").show();
    });
    $("#display").change(function() {
      if (this.files && this.files[0]) {
        var reader = new FileReader();
        reader.onload = function(image) {
          $("#display-preview").attr("src", image.target.result);
          $("#display-preview").show();
        };
        reader.readAsDataURL(this.files[0]);
      }
    });
  });
</script>
