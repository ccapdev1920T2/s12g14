<main role="main">
  <div class="container">
    <div class="row">
      <div class="col-7 p-4 rounded bg-cstm-green-lightest"style="height:400px">
        <h2 id="profile-name">{{profile.display}}</h2>
        {{#if profile.bio}}
          <h4 class="h-75 lead" id="profile-description">{{profile.bio}}</h4>
        {{/if}}
        <small id="join-date" class="align-self-end">Joined on {{profile.join_date}}</small>
      </div>
      <div class="col-5">
        <img id="profile-image" class="rounded img-fluid" src="{{profile.picture_link}}">
      </div>
    </div>
    <div class="row" id="all-recipes">
      <h2>{{recipe_title}}</h2>
      {{> recipes uploaded_recipes }}
    </div>
    <div class="row">
      <h2>Likes</h2>
      {{> recipes liked_recipes }}
    </div>
    <div class="row">
      <h2 class="mt-2">Comments</h2>
      {{#each comments}}
      <div class="recipe-cards p-2">
        <div class="row mt-4">
          <div class="card-deck">
            <div class="row p-1">
              <div class="col-3">
                <div class="recipe-card card text-center">
                  <img class="card-img-top" src="{{recipe.picture_link}}">
                  <div class="card-body bg-cstm-green-lighter">
                    <h6 class="card-title">{{recipe.name}}</h6>
                  </div>
                </div>
              </div>
              <div class="col p-4 rounded bg-cstm-orange-lighter">
                <h4 class="lead" id="input-recipe-name">{{text}}</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      <button type="button" class="btn btn-cstm-orange-darkest text-light ml-auto mr-auto mt-4 d-block">Show more</button>
    </div>
  </div>
  <!-- TODO: add aria-describedby descriptors using small for accessibility -->
</main>
