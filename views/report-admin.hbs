<main>
  <div class="container">
    <div id="reports" class="mt-3">
      <h1>User reports</h1>
      {{#if reports}}
        {{#each reports}}
        <div class="bg-cstm-orange-lighter p-3 my-2 border border-dark">
          <div class="row">
            <h5 class="col-3">Reporting User:</h5>
            <h5 class="col-9"> {{author_name}} </h5>
          </div>
          <div class="row">
            <h5 class="col-3">Reported Type:</h5>
            <h5 class="col-9"> {{ref}} </h5>
          </div>
          <div class="row">
            <h5 class="col-3">Reason Reported:</h5>
            <h5 class="col-9">{{reason}}</h5>
          </div>
          <div class="row">
            <h5 class="col-3">Timestamp: </h5>
            <h5 class="col-9">{{timestamp}}</h5>
          </div>
          <div class="row">
            <h5 class="col-3">
            {{#if recipe}}
              Recipe Title:
            {{else}}
              Comment:
            {{/if}}
            </h5>
            <h5 class="col-9">
              {{content}}
            </h5>
          </div>
          <div class="row">
            <a class="h5 ml-3" href="{{link}}">Link to Content</a>
          </div>
        </div>  
        {{/each}}
      {{else}}
      <div>
        <p>There are no reports.</p>
      </div>
      {{/if}}
    </div>
  </div>
</main>
